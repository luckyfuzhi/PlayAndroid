<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/project_article_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/no_img"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:background="#F4F5F8"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/project_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:paddingTop="7dp"
            android:paddingLeft="7dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/project_article_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/project_article_title"
            android:ellipsize="end"
            android:lines="3"
            android:paddingLeft="7dp"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true">
                <TextView
                    android:id="@+id/project_article_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:textSize="13dp"
                    android:text="作者："
                    android:textColor="@color/light_blue"
                    />
                <TextView
                    android:id="@+id/project_article_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:textSize="13dp"
                    android:layout_below="@id/project_article_author"
                    android:textColor="@color/light_blue"
                    android:text="时间："
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/project_article_love"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/love_btn_animator"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>